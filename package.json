  "repository": {
    "type": "git",
    "url": "https://github.com/toranaga-samma/simple-jsonrpc"
  },
  "keywords": [
    "jsonrpc",
    "remote",
    "procedure",
    "call"
  ],
  "author": "Dan Vandachevici <dan@vandachevici.ro>",
  "license": "Beerware",
  "bugs": {
    "url": "https://github.com/toranaga-samma/simple-jsonrpc/issues"
  },
  "homepage": "https://github.com/toranaga-samma/simple-jsonrpc",
  "dependencies": {
    "async": "^2.1.5",
    "simple-color-log": "^1.0.1",
    "tv4": "^1.2.7"
  },
  "devDependencies": {
    "eslint": "^3.16.1",
    "eslint-config-google": "^0.7.1",
    "mocha": "^3.2.0",
    "npm-watch": "^0.1.8",
    "request": "^2.76.0",
    "sinon": "^2.1.0"
