{
  "name": "simple-jsonrpc-server",
  "version": "1.0.0",
  "description": "A very simple JSONRPC library, that focuses on quick deploy, and ease of use",
  "main": "index.js",
  "directories": {
    "example": "examples"
  },
  "watch": {
    "lint": [
      "./index.js",
      "./lib/*.js"
    ],
    "test": [
        "./index.js",
        "./lib/*.js",
        "./test/test.js"
    ]
  },
  "scripts": {
    "test": "./node_modules/.bin/mocha test/test.js",
    "lint": "./node_modules/.bin/eslint index.js",
